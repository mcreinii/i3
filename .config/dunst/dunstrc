# ~/.config/dunst/dunstrc

# General Settings
global {
    font = Monospace 10
    geometry = "300x40-20+100"   # Position and size (width x height, offset from right and top)
    padding = 10 10 10 10         # Padding for notifications (top right bottom left)
    notification_height = 30      # Height of each notification
    max_icon_size = 50           # Max size for icons
    word_wrap = 1                # Allow long text to wrap
}

# Colors
color1 = #9B4B97   # Purple
color2 = #7C2A72   # Mid purple
color3 = #D88BE8   # Bright purple for text
color4 = #D078D4   # Soft magenta for background

# Background and Foreground for Notifications
frame_color = $color2       # Border around the notification (mid purple)
background = $color4        # Background color (soft magenta)
foreground = $color3        # Text color (bright purple)
urgent_background = #bf616a # Urgent notification background (muted red)
urgent_foreground = #eceff4 # Urgent notification text color (light)

# Other customization (optional)
# Border radius for rounded corners
border_radius = 10

# Padding for the notifications' content
padding = 10

# Border width (optional)
border_width = 2

# Timeout for notifications in milliseconds
timeout = 5000

